<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="RFAvalonia.MainWindow" KeyDown="Window_KeyDown"
		xmlns:local="clr-namespace:RFAvalonia"
        Title="RFAvalonia">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!--¿Còmo puedo hacer màs grandes las imàgenes de los botones?????-->

		<Grid Margin="20" Height="70" Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition/>
				<ColumnDefinition/>
				<ColumnDefinition/>
			</Grid.ColumnDefinitions>
			<Image Stretch="Uniform" Source="/Images/esimelogo.png" Grid.Column="2"/>
			<Image Stretch="Uniform" Source="/Images/msti.png" Grid.Column="1"/>
			<Image Stretch="Uniform" Source="/Images/ipn.png" Grid.Column="0"/>

		</Grid>
		<local:ArrowsControl Grid.Row="1"/>
		<StackPanel HorizontalAlignment="Right" Grid.Row="3" Margin="15">
			<TextBlock Text="Jiménez Angeles Daniel Antonio" FontSize="12"/>
			<TextBlock Text="García García Jonathan Eduardo" FontSize="12"/>
			<TextBlock Text="Santiesteban González Santiago" FontSize="12"/>
		</StackPanel>
	</Grid>
</Window>
